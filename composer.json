{
    "name": "lukaszzychal/tmdb-client-php",
    "description": "A comprehensive PHP client for The Movie Database (TMDB) API",
    "type": "library",
    "keywords": [
        "tmdb",
        "movie",
        "tv",
        "api",
        "client",
        "themoviedb"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "≈Åukasz Zychal",
            "email": "lukasz.zychal@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.8",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0",
        "psr/log": "^1.0|^2.0|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "vimeo/psalm": "^5.26",
        "php-coveralls/php-coveralls": "^2.5",
        "friendsofphp/php-cs-fixer": "^3.0",
        "monolog/monolog": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "LukaszZychal\\TMDB\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LukaszZychal\\TMDB\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "phpcs": "phpcs src/ tests/",
        "phpcbf": "phpcbf src/ tests/",
        "php-cs-fixer": "php-cs-fixer fix --dry-run --diff --allow-risky=yes",
        "php-cs-fixer-fix": "php-cs-fixer fix --allow-risky=yes",
        "psalm": "psalm",
        "quality": [
            "@php-cs-fixer",
            "@phpstan",
            "@psalm",
            "@test"
        ],
        "quality-check": [
            "@php-cs-fixer"
        ],
        "quality-full": [
            "@phpstan",
            "@psalm", 
            "@test"
        ],
        "quality-core": [
            "@php-cs-fixer",
            "@phpstan",
            "@psalm"
        ],
        "test-core": "vendor/bin/phpunit --testsuite=Unit,Integration"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
